/**
 * Trang chi tiết sản phẩm theo glt_slug
 * Tạo static paths từ danh sách sản phẩm lấy từ PUBLIC_API_URL
 */

import Layout from '../../layouts/Layout.astro';
import ProductDetailIsland from '../../components/ProductDetailIsland.tsx';
import { getProducts } from '../../lib/api';
import type { Product, ProductResponse } from '../../types/product';

interface Props {
  product: Product;
}

// Enable static generation cho trang này
export const prerender = true;

export async function getStaticPaths() {
  try {
    const data = (await getProducts()) as ProductResponse;
    const products = data.products_data || [];

    // Lọc những sản phẩm có glt_slug hợp lệ
    // Chỉ cần glt_slug, không cần cả full_name và name vì có thể có trường hợp chỉ có một trong hai
    const itemsWithSlug = products.filter((p) => Boolean(p.glt_slug));

    const paths = itemsWithSlug.map((p) => ({
      params: { slug: p.glt_slug as string },
      props: { product: p },
    }));

    // Log để debug (chỉ trong dev mode)
    if (import.meta.env.DEV) {
      console.log(`[getStaticPaths] Generated ${paths.length} product paths`);
      // Log một vài slug để kiểm tra
      if (paths.length > 0) {
        console.log(`[getStaticPaths] Sample slugs:`, paths.slice(0, 5).map(p => p.params.slug));
      }
    }

    return paths;
  } catch (error) {
    console.error('Error generating static paths for products:', error);
    // Trả về mảng rỗng nếu có lỗi, để tránh crash
    return [];
  }
}

const { product } = Astro.props as Props;

// Nếu product không tồn tại (trường hợp hiếm khi getStaticPaths không match), redirect về trang products
if (!product) {
  if (import.meta.env.DEV) {
    console.warn(`[ProductDetail] Product not found for slug: ${Astro.params.slug}`);
  }
  return Astro.redirect('/products', 302);
}

// Log để debug trong dev mode
if (import.meta.env.DEV) {
  console.log(`[ProductDetail] Rendering product:`, {
    slug: Astro.params.slug,
    name: product?.name,
    full_name: product?.full_name,
    hasImages: Boolean(product?.glt_images?.length),
  });
}

/**
 * Hàm lấy URL hình ảnh chính của sản phẩm cho trang chi tiết
 * Ưu tiên các ảnh có role: feature-main > closeup-main > feature-thumbnail > closeup-thumbnail
 * @param product - Đối tượng sản phẩm
 * @returns URL hình ảnh hoặc placeholder
 */
function getProductImage(product: Product): string {
  if (product.glt_images && product.glt_images.length > 0) {
    // Lọc các ảnh có role trong danh sách: feature-main, feature-thumbnail, closeup-main, closeup-thumbnail
    const allowedRoles = [
      'feature-main',
      'feature-thumbnail',
      'closeup-main',
      'closeup-thumbnail',
    ];
    
    const filteredImages = product.glt_images.filter(img => 
      allowedRoles.includes(img.role)
    );
    
    if (filteredImages.length > 0) {
      // Ưu tiên: feature-main > closeup-main > feature-thumbnail > closeup-thumbnail
      const featureMain = filteredImages.find(img => img.role === 'feature-main');
      if (featureMain) {
        return featureMain.url;
      }
      
      const closeupMain = filteredImages.find(img => img.role === 'closeup-main');
      if (closeupMain) {
        return closeupMain.url;
      }
      
      const featureThumbnail = filteredImages.find(img => img.role === 'feature-thumbnail');
      if (featureThumbnail) {
        return featureThumbnail.url;
      }
      
      const closeupThumbnail = filteredImages.find(img => img.role === 'closeup-thumbnail');
      if (closeupThumbnail) {
        return closeupThumbnail.url;
      }
      
      // Fallback: lấy ảnh đầu tiên từ filtered images
      return filteredImages[0].url;
    }
    
    // Fallback: nếu không có ảnh trong danh sách allowed, lấy ảnh đầu tiên
    return product.glt_images[0].url;
  }
  
  return 'https://via.placeholder.com/800x600?text=No+Image';
}
---

<Layout title={`${product?.full_name || product?.name || 'Sản phẩm'} - Gạo Lâm Thúy`} description={`Chi tiết sản phẩm ${product?.full_name || product?.name || 'Sản phẩm'}`}>
