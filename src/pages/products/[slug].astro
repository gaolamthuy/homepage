        </div>


        <!-- <div class="text-xs text-base-content/50 pt-4">
          Mã hàng: {product.code} • ID: {product.id}
        </div> -->
      </div>
    </div>

    <!-- Gợi ý sản phẩm liên quan (đơn giản: cùng danh mục) -->
    <!-- Có thể mở rộng trong tương lai: fetch thêm và loại trừ chính mình -->
  </main>
</Layout>


