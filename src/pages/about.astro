---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Giới thiệu - Gạo Lâm Thúy" description="Giới thiệu về Gạo Lâm Thúy, thông tin liên hệ, doanh nghiệp và thanh toán.">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Giới thiệu về Gạo Lâm Thúy</h1>

    <!-- fixed card height 600px -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <section>
        <div class="card bg-base-100 shadow h-[210px]">
          <div class="card-body">
            <div class="flex items-center justify-between mb-3">
              <h2 class="card-title text-2xl">Thông tin liên hệ</h2>
              <button class="btn btn-sm" data-copy="">Copy</button>
            </div>
            <div class="space-y-2 text-base-content/80">
              <p><strong>Điện thoại:</strong> 0901 467 300 (Zalo)</p>
              <p><strong>Địa chỉ:</strong> 23 Nguyễn Đình Chiểu, Phường 4, Quận Phú Nhuận, TP.HCM</p>
              <p>
                <a href="https://facebook.com" class="link link-primary" target="_blank" rel="noopener noreferrer">Facebook</a>
                <span class="mx-2">·</span>
                <a href="https://zalo.me" class="link link-primary" target="_blank" rel="noopener noreferrer">Zalo</a>
              </p>
            </div>
          </div>
        </div>
      </section>

      <section>
        <div class="card bg-base-100 shadow h-[210px]">
          <div class="card-body">
            <div class="flex items-center justify-between mb-3">
              <h2 class="card-title text-2xl">Thông tin doanh nghiệp</h2>
              <button class="btn btn-sm" data-copy="">Copy</button>
            </div>
            <div class="space-y-2 text-base-content/80">
              <p><strong>Công ty:</strong> Công ty TNHH Gạo Lâm Thuý</p>
              <p><strong>Mã số thuế:</strong> 0316991815</p>
              <p><strong>Địa chỉ:</strong> 23 Nguyễn Đình Chiểu, Phường 4, Quận Phú Nhuận, TP.HCM</p>
              <p><strong>Email:</strong> contact@gaolamthuy.vn</p>
            </div>
          </div>
        </div>
      </section>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <section class="md:col-span-2">
        <div class="card bg-base-100 shadow h-[210px]">
          <div class="card-body">
            <div class="flex items-center justify-between mb-3">
              <h2 class="card-title text-2xl">Thông tin thanh toán</h2>
              <button class="btn btn-sm" data-copy="">Copy</button>
            </div>
            <div class="space-y-2 text-base-content/80">
              <p><strong>Ngân hàng:</strong> Vietcombank</p>
              <p><strong>Số tài khoản:</strong> 1012 842 851</p>
              <p><strong>Chủ tài khoản:</strong> Ho Pham Lam</p>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('button[data-copy]')?.forEach((btnEl) => {
      const btn = btnEl as HTMLButtonElement;
      btn.addEventListener('click', async () => {
        try {
          const value = btn.getAttribute('data-copy') || '';
          await navigator.clipboard.writeText(value);
          const old = btn.textContent || 'Copy';
          btn.textContent = 'Đã copy';
          setTimeout(() => (btn.textContent = old), 1200);
        } catch (e) {
          // no-op
        }
      });
    });
  });
</script>


