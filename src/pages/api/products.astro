// API endpoint trả về danh sách sản phẩm
import { HOMEPAGE_API_URL } from "@/lib/config";

export async function get() {
  try {
    const apiUrl = HOMEPAGE_API_URL + (HOMEPAGE_API_URL.includes('?') ? '&' : '?') + 't=' + Date.now();
    const response = await fetch(apiUrl, { cache: 'no-store' });
    if (!response.ok) {
      return new Response(JSON.stringify([]), {
        status: 200,
        headers: { "Content-Type": "application/json" }
      });
    }
    let data = [];
    try {
      data = await response.json();
    } catch (jsonErr) {
      // Nếu JSON parse lỗi, trả về mảng rỗng
      return new Response(JSON.stringify([]), {
        status: 200,
        headers: { "Content-Type": "application/json" }
      });
    }
    return new Response(JSON.stringify(data), {
      status: 200,
      headers: { "Content-Type": "application/json" }
    });
  } catch (err) {
    // Nếu có lỗi khác, cũng trả về mảng rỗng
    return new Response(JSON.stringify([]), {
      status: 200,
      headers: { "Content-Type": "application/json" }
    });
  }
}
